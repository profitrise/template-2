<div class='page'>
  <div class='page_content'>
        <header class='header row g-0'>
        <div class='col-3'>
         {{> logo}}
        </div>
        <nav class='header_nav col-9'><div class="header_nav_right">{{> nav list=header}}</div>
           {{!-- {{> nav list=header isVertical=true}} --}}
        </nav>
      </header>
      <main class="main">
        {{#with messages}}
        <div class="message">
          <h1 class="message_title">{{title}}</h1>
          {{#each list}}
          <div class="msg">
            <strong class="msg_name">{{name}}</strong>
            <p class="msg_text">{{message}}</p>
            <span class="msg_day">{{day}}</span>
          </div>
          {{/each}}
          <a href="#" class="message_link">All messades</a>
        </div>
        {{/with}}
        {{#with form}}
        <form class="form">
          <h2 class="form_title">{{title}}</h2>
          <div class="input_form">
            {{#each inputs}}
            <input type="{{type}}" name="{{name}}" id="input-{{id}}" placeholder="{{placeholder}}" class="inputs">
            {{/each}}
          </div>
          {{#with checkbox}}
          <div class="checkbox_block">
            <input type="checkbox" name="{{name}}">
            <label for="">{{label}}</label>
          </div>  
          {{/with}}  

          <button type="submit" class="form_btn">{{button}}</button>
          <p class="info">{{info}}</p>
        </form>
           {{/with}}
      </main>
     
      <div class="adventages">
         {{#each advantages}}
        <div class="adv">
          <strong class="adv_title">{{title}}</strong>
          <p class="adv_text">{{text}}</p>
        </div>
        {{/each}}
      </div>
      


    <footer class="footer row">
      <div class="col-3">
        {{> logo}}
        <span class="footer_copyright">Copyright 2023</span>
      </div>
      {{#each footer}}
      <div class="col-3"><span class="footer_title">{{title}}</span>
      {{> nav list=links isVertical=true}}
      </div>
      {{/each}}
    </footer>
   

  </div>
</div>